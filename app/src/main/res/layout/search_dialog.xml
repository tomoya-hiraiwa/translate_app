<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:minWidth="400dp"
    android:minHeight="400dp"
    android:orientation="vertical">

    <TextView
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search" />

    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:hint="From Language"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/se_fromEdit"
            android:textSize="20sp"
            app:simpleItems="@array/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:hint="To Language"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/se_toEdit"
            android:textSize="20sp"
            app:simpleItems="@array/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Text" />
   <EditText
       android:layout_marginTop="10dp"
       android:hint="Enter from text"
       android:id="@+id/se_fromtextEdit"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Text"/>
    <EditText
        android:layout_marginTop="10dp"
        android:hint="Enter To text"
        android:id="@+id/se_totextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/se_sebt"
        android:text="Search"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"/>

</LinearLayout>